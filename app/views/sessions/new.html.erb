<!-- app/views/sessions/new.html.erb -->
<div id="login-page">
  <div class="login-container">
    <h1 class="login-title">WatchedMediaApp</h1>
    <p class="login-tagline">A new way to blog your cinema world.</p>
    <%= form_with scope: :session, url: login_path, local: true do |form| %>
      <div class="form-group">
        <%= form.label :email, class: 'form-label' %>
        <%= form.email_field :email, autofocus: true, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :password, class: 'form-label' %>
        <%= form.password_field :password, class: 'form-control' %>
      </div>
      <div class="form-actions">
        <%= form.submit "Log In", class: "btn btn-primary" %>
        <%= link_to 'Sign Up', signup_path, class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>
