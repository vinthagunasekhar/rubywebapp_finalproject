<!-- app/views/devise/sessions/new.html.erb -->
<div id="login-page">
  <div class="login-container">
    <h1 class="login-title">WatchedMediaApp</h1>
    <p class="login-tagline">A new way to blog your cinema world.</p>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), local: true) do |f| %>
      <div class="form-group">
        <%= f.label :email, class: 'form-label' %>
        <%= f.email_field :email, autofocus: true, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :password, class: 'form-label' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <div class="form-actions">
        <%= f.submit "Log In", class: "btn btn-primary" %>
        <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>
